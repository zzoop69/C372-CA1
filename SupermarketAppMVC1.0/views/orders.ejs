<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>My Orders</title>
  <style>
    body {
        font-weight: bold;
      }
    body { background-image: url('/images/supermarket3.jpg'); background-size:cover; }
    .overlay { background-color: rgba(0, 0, 0, 0.555); min-height:100vh; padding:24px; color:#fff }
    .card { background-color: rgba(255,255,255,0.95); color:#111 }
  </style>
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <div>
        <a class="btn btn-outline-light" href="/shopping">Shop</a>
        <a class="btn btn-outline-light ms-2" href="/cart">Cart</a>
        <a class="btn btn-outline-light ms-2" href="/logout">Logout</a>
      </div>
    </div>
  </nav>
  <div class="overlay">
    <div class="container">
      <h2>My Orders</h2>
      <% if (!orders || orders.length === 0) { %>
        <p>No past orders found.</p>
      <% } else { %>
        <% orders.forEach(o => { %>
          <div class="card mb-3 p-3">
            <div class="d-flex justify-content-between">
              <div>
                <strong>Order #<%= o.id %></strong>
                <div>Placed: <%= new Date(o.order_date).toLocaleString() %></div>
              </div>
              <div>
                <strong>Total: $<%= Number(o.total_amount).toFixed(2) %></strong>
              </div>
            </div>
            <hr />
            <div>
              <table class="table table-sm">
                <thead>
                  <tr><th>Product</th><th>Qty</th><th>Price</th><th>Subtotal</th></tr>
                </thead>
                <tbody>
                  <% o.items.forEach(it => { %>
                    <tr>
                      <td><%= it.productName || ('#' + it.product_id) %></td>
                      <td><%= it.quantity %></td>
                      <td>$<%= Number(it.price).toFixed(2) %></td>
                      <td>$<%= (it.quantity * it.price).toFixed(2) %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
</body>
</html>
