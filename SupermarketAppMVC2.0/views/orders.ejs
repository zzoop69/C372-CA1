<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', { title: 'My Orders' }) %>
  <style>
    body {
        font-weight: bold;
      }
    body { background-image: url('/images/supermarket3.jpg'); background-size:cover; }
    .overlay { background-color: rgba(0, 0, 0, 0.555); min-height:100vh; padding:24px; color:#fff }
    .card { background-color: rgba(255,255,255,0.95); color:#111 }
  </style>
<body>
  <%- include('partials/navbar') %>
  <div class="overlay">
    <div class="container">
      <h2>My Orders</h2>
      <% if (!orders || orders.length === 0) { %>
        <p>No past orders found.</p>
      <% } else { %>
        <% orders.forEach(o => { %>
          <div class="card mb-3 p-3">
            <div class="d-flex justify-content-between">
              <div>
                <strong>Order #<%= o.id %></strong>
                <div>Placed: <%= new Date(o.order_date).toLocaleString() %></div>
              </div>
              <div>
                <strong>Total: $<%= Number(o.total_amount).toFixed(2) %></strong>
              </div>
            </div>
            <hr />
            <div>
              <table class="table table-sm">
                <thead>
                  <tr><th>Product</th><th>Qty</th><th>Price</th><th>Subtotal</th></tr>
                </thead>
                <tbody>
                  <% o.items.forEach(it => { %>
                    <tr>
                      <td><%= it.productName || ('#' + it.product_id) %></td>
                      <td><%= it.quantity %></td>
                      <td>$<%= Number(it.price).toFixed(2) %></td>
                      <td>$<%= (it.quantity * it.price).toFixed(2) %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>

            <div class="mt-2">
              <a href="/order/<%= o.id %>" class="btn btn-sm btn-primary">
                View / Print Invoice
              </a>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>
